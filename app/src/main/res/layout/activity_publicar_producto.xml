<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_gradient"
    android:id="@+id/main">



    <LinearLayout
        android:id="@+id/datosProductosLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/imagenPublicarProducto"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="Foto del producto"
            android:src="@drawable/producto" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Nombre del producto"
            />
        <EditText
            android:id="@+id/nombrePublicarProducto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:hint="Nombre producto" />

        <Space
            android:layout_width="0dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/descripcionPublicarProducto"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:maxLines="8"
            android:hint="Descripción del producto"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Categorias"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoriasRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/publicarProductoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/localizacionPublicarProductoButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_location"
            android:contentDescription="Localizacion del producto"/>

        <Button
            android:id="@+id/publicarProductoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gris_claro"
            android:textColor="@color/black"
            android:text="Publicar Producto" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressBarPublicarProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
