<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_gradient"
    android:id="@+id/main">



    <LinearLayout
        android:id="@+id/datosDetalleProductoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenDetalleProducto"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/nombreDetalleProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:hint="Nombre producto" />
        <Space
            android:layout_width="0dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/descripcionDetalleProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion del producto"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categorias"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoriasRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/autorProductoLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/imagenDetalleProductoUsuario"
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_profile"
                android:contentDescription="Foto perfil usuario"/>
            <TextView
                android:id="@+id/nombreUsuarioDetalleProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre de usuario"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/intercambiarEliminarLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/localizacionDetalleProductoButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_location"
            android:contentDescription="Localizacion del producto"/>

        <Button
            android:id="@+id/intercambiarProductoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gris_claro"
            android:textColor="@color/black"
            android:text="Intercambiar Producto" />
        <ImageButton
            android:id="@+id/chatUsuarioDetalleProductoButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_chat"
            android:contentDescription="Chatear con el usuario"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detalleProductoProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
