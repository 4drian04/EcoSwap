<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_gradient">


    <LinearLayout
        android:id="@+id/datosDetalleIntercambio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETALLE DEL INTERCAMBIO"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos a intercambiar"
            android:layout_marginTop="80dp"
            android:textAlignment="center"
            android:textSize="20sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/imagenPrimerProductoDetalleIntercambio"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/producto" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/intercambio_logo" />

            <ImageView
                android:id="@+id/imagenSegundoProductoDetalleIntercambio"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/producto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/fotoPerfilPrimerUsuarioDetalleIntercambio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/loading"
                android:contentDescription="Foto perfil primer usuario"/>

            <ImageButton
                android:id="@+id/fotoPerfilSegundoUsuarioDetalleIntercambio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/loading"
                android:layout_marginStart="120dp"
                android:contentDescription="Foto perfil segundo usuario"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/botonesIntercambios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/chatIntercambio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/color_transparente"
            app:srcCompat="@drawable/ic_chat"
            android:contentDescription="confirmar intercambio"/>

        <Button
            android:id="@+id/cancelarIntercambio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gris_claro"
            android:textColor="@color/black"
            android:text="Cancelar intercambio" />

        <ImageButton
            android:id="@+id/confirmarIntercambio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/color_transparente"
            app:srcCompat="@drawable/tick_verde50"
            android:contentDescription="confirmar intercambio"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detalleIntercambioProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
