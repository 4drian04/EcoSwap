<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    android:id="@+id/main">

    <TextView
        android:id="@+id/tituloValoracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por favor, califica tu experiencia con "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:rating="0"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/justificacionEditText"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Escribe tu justificación (máx. 3 líneas)"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:gravity="top|start"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"/>

        <Button
            android:id="@+id/enviarValoracionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:backgroundTint="@color/gris_claro"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
    </LinearLayout>



</LinearLayout>