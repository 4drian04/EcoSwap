<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cardViewNotificacion"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/white">

    <TextView
        android:id="@+id/tituloNotificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:hint="Titulo Notificacion"
        android:layout_marginStart="8dp"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">


        <TextView
            android:id="@+id/descripcionNotificacionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:text="Descripción de la notificación"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/borrarNotificacionButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_eliminar"
            android:background="@color/color_transparente"
            android:contentDescription="Eliminar notificación"
            android:layout_marginStart="16dp"
            android:layout_gravity="end"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>